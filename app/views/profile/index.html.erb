<h1>This is the index view for Profile</h1>
  <div class="panel panel-default col-md-8 text-left">
    <div class="pull-left">
      <h4>Twets</h4>
    </div>
    <div class="clearfix"></div>
    <hr />
    <ol class="list-unstyled">
      <% @twets.each do |twet| -%>
      <li>
        <strong class = "pull-left text-middle"><%= twet.user.name %></strong>
				<small class = 'text-muted pad-10 text-middle'><%= link_to("@"+twet.user.username, @profile) %></small>
 				<small><%= twet.created_at.strftime("%b %-d") %></small>
        <div class="clearfix"></div>
        <%= content_tag :p, twet.content %>
      </li>
      <li><hr></li>
      <% end -%>
    </ol>
  </div>
  